@{
    ViewData["Title"] = "Refill";
}
<div class="text-center">
    <h2>Пополнение склада</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Склад</div>
        <div class="col-8"><select id="storeHouse" name="storeHouse" class="form-control" asp-items="@(new SelectList(@ViewBag.StoreHouses,"Id", "StoreHouseName"))"></select></div>
    </div>
    <div class="row">
        <div class="col-4">Компонент</div>
        <div class="col-8"><select id="component" name="component" class="form-control" asp-items="@(new SelectList(@ViewBag.Components,"Id", "ComponentName"))"></select></div>
    </div>
    <div class="row">
        <div class="col-4">Количество</div>
        <div class="col-8"><input type="text" name="count" id="count" /></div>
    </div>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4"><input type="submit" value="Пополнить" class="btn btnprimary" /></div>
    </div>
</form>