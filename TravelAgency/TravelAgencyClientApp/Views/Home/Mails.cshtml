@using TravelAgencyBusinessLogic.ViewModels

@model (List<MessageInfoViewModel> messages, bool hasNext, int page)
@{
    ViewData["Title"] = "Mails";
}
<div class="text-center">
    <h1 class="display-4">Письма</h1>
</div>
<div class="text-center">
    @{
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Отправитель
                    </th>
                    <th>
                        Дата письма
                    </th>
                    <th>
                        Заголовок
                    </th>
                    <th>
                        Текст
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.messages)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SenderName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateDelivery)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Body)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <div>
        @{
            if ((Model.page - 1) >= 1)
            {
                <a asp-action="Mails" asp-route-page="@(Model.page-1)">Назад @(Model.page-1)</a>
            }
            <span style="font-weight: bold;">@(Model.page)</span>
            if (Model.hasNext)
            {
                <a asp-action="Mails" asp-route-page="@(Model.page+1)">Вперед @(Model.page+1)</a>
            }
        }
    </div>
</div>